<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.source_code_fetcher_ui.LauncherController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Button text="Stop" onAction="#onStopButtonClick" fx:id="stopButton" visible="false"/>

    <Label fx:id="welcomeText"/>
    <Button text="Launch" onAction="#onLaunchButtonClick" fx:id="launchButton"/>

    <Label text="Choose the number of windows" fx:id="windowsText"/>
    <TextField fx:id="windowsTextField"/>

    <Label text="Paste your URL here" fx:id="urlText"/>
    <TextField fx:id="urlTextField"/>

    <Label text="Choose where to save files" fx:id="filePathText"/>
    <TextField fx:id="filePathTextField"/>

</VBox>
